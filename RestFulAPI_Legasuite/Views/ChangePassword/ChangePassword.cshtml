<div class="container">
	
	<div class="card" style="width:50%;margin:auto;">
	<div class="card-body">
		<h3 class="card-title text-center">Change password</h3>

		<!--Password must contain one lowercase letter, one number, and be at least 7 characters long.-->

		<div class="card-text">
			<form id="changePassword">
					<div class="form-group">
						<label for="siteName">Site Name</label>
						<select id="siteName" class="form-select form-select-lg mb-3" data-container="body">
							<option>RocketLegasuite</option>
						</select>
					</div>
					<div class="form-group">
						<label for="system">System</label>
						<select id="system" class="form-select form-select-lg mb-3" data-container="body">
							<option>EQ</option>
							<option>AQ</option>
						</select>
					</div>
				<div class="form-group">
					<label for="exampleInputEmail1">Your new password</label>
						<input id="newPassword" type="password" class="form-control form-control-sm">
				</div>
					<div class="form-group" style="text-align:center">
					<button type="button" onClick="changePassword()" class="btn btn-primary btn-block submit-btn mt-2">Confirm</button>
					</div>
			</form>
		</div>
	</div>
	</div>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>

<script>

function changePassword(){
		var siteName = $('#siteName').val();
		var system = $('#system').val();
		var newPassword = $('#newPassword').val();
		var updatePasswordInputs = {	
			siteName: siteName,
			system: system,
			newPassword: newPassword
		};
			
		$.ajax({
			
			url: '/api/UpdateAppSetting/update', 
			type: 'POST',
			data: JSON.stringify(updatePasswordInputs),
			contentType: 'application/json',			
			success: function (result) {
			},
			error: function (error) {
				// Handle the error
			}
		});
	
}

</script>